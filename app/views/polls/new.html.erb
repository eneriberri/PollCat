<center><h1>Create Poll</h1></center>
<form action="<%= polls_url %>" method="post" accept-charset="utf-8" class="custom">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="poll[user_id]" value="<%= current_user.id %>">

    <div class="row">
      <label for="your_question">Your Question</label>
      <input type="text" name="poll[question]" id="your_question" placeholder="e.g. Do you like me?">

      <br>

      <label for="type">Type</label>
      <select name="poll[poll_type]" id="type">
      <option value="pie">Pie Chart</option>
      <option value="bar">Bar Graph</option>
      </select>

      <br>

      <label for="answer_choice">Answer Choices</label>
      <input type="text" name="answers[1][body]" id="answer_choice" placeholder="Yes!">
      <input type="text" name="answers[2][body]" placeholder="Yes.">


      <p class="more-answers"></p>
      <button type="button" id="add-answer" class="tiny button">+</button>
      <button type="button" id="remove-answer" class="tiny button">-</button>
      <p></p>


      <p><input type="submit" value="Create Poll" class="medium button"></p>
    </row>
</form>

