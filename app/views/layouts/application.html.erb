<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie9" lang="en"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />
  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "PollCat" %></title>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>

    <script type="text/javascript">
      window.currentUser = {
        <% if current_user %>
          id : <%= current_user.id %>
        <% else %>
          id : undefined
        <% end %>
      }
    </script>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <nav class="top-bar">
      <!-- <p></p> -->
      <ul class="title-area">

        <!-- Title Area -->
        <li class="name">
          <h1><a href="/#">POLL CAT</a></h1>
        </li>
      </ul>

      <section class="top-bar-section">
        <!-- Left Nav Section -->
        <!-- <ul class="left">
          <li class="divider"></li>
          <li><a href="#"></a></li>
        </ul> -->

        <!-- Right Nav Section -->
        <ul class="right">
          <li class="divider"></li>
          <% if current_user.nil? %>
            <li class="has-form">
              <form action="<%= session_url %>" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

                <div class="row collapse">
                  <div class="small-5 columns">
                    <input type="text" placeholder="username" name="user[username]">
                  </div>
                  <div class="small-5 columns">
                    <input type="password" placeholder="password" name="user[password]">
                  </div>
                  <div class="small-2 columns">
                    <input type="submit" value="Log In" class="medium button expand noshadow">
                  </div>
                </div>
              </form>
            </li>

            <li class="divider"></li>
            <li><a href="/users/new">Sign Up</a></li>
            <% else %>
              <li><a href="/users/<%= current_user.id %>">My Account</a></li>
            <% end %>
        </ul>


      </section>
    </nav>

    <div class="wrapper">

      <%= yield %>
        <div class="push"></div>
    </div>

    <div class="footer">
      <div class="text-center">
        <h6 class="subheader"><i>Poll Cat &copy; 2013
        <br>
        Made with love by Irene Nguyen</i></h6>
      </div>
    </div>

    <%= javascript_include_tag "application" %>


  </body>
</html>
